<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minuteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="315dp"
            android:layout_marginBottom="117dp"
            android:background="@drawable/timer_background"
            android:padding="15dp"
            android:text="00"
            android:textSize="100sp"/>

        <TextView
            android:id="@+id/colonOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text=":"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/secondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/timer_background"
            android:padding="15dp"
            android:text="20"
            android:textSize="100sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/start_btn_background"
            android:padding="10dp"
            android:layout_marginEnd="20dp"
            android:text="Start Session"
            android:textAllCaps="false"
            android:drawableStart="@drawable/play_icon"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/pause_btn_background"
            android:paddingStart="20dp"
            android:text="Pause"
            android:drawableStart="@drawable/pause_icon"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/timer_reset_btn_background"
        android:padding="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Reset Timer"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />
</LinearLayout>